<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.m.mypokemon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.MainMenuActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.SubMenuActivity" />
        <activity
            android:name=".ui.activities.PokemonActivity"
            android:label="@string/title_activity_pokemon"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.activities.SubSubMenuActivity" />
        <activity
            android:name=".ui.activities.VideoGameActivity"
            android:label="@string/title_activity_video_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activities.TypeActivity"
            android:label="@string/title_activity_type"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
